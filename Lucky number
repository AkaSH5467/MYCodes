
#include <iostream>

using namespace std;

int main()
{ 
    int n;
    int a,b,c;
    cin>>n;
    for(int i=0;i<n;i++)
        {
            cin>>a;
           int c=0;
            while(a!=0)
            
            {  b=a%10;
                if(b==4)
                {
                    c++;
                }
                a=a/10;
            }
            
            cout<<c<<endl;
        }
        

    return 0;
}

