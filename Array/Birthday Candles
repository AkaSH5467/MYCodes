#include <iostream>

using namespace std;

int main()
{
    int n;
    cin>>n;
    int arr[n];
    int max=0;
    int count=0;
    int p=0;
    
    for(int i=0;i<n;i++)
    {
        cin>>arr[i];
    }
    for(int i=0;i<n;i++)
    {
        if(max<=arr[i])
        {
            max=arr[i];
            
        }
        
    }
    
    
    for(int i=0;i<n;i++)
    {
         if(max==arr[i])
        {
            count++;
        }
    }
    
    cout<<count<<endl;
    
    
    
    

    return 0;
}
